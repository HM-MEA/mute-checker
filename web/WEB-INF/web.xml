<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <security-constraint>
		<web-resource-collection>
			<web-resource-name>cron</web-resource-name>
			<url-pattern>/cron</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
		</auth-constraint>
	</security-constraint>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>ssl</web-resource-name>
			<url-pattern>/*</url-pattern>
		</web-resource-collection>
		<user-data-constraint>
			<transport-guarantee>CONFIDENTIAL</transport-guarantee>
		</user-data-constraint>
	</security-constraint>
	<servlet>
        <servlet-name>SigninServlet</servlet-name>
        <servlet-class>jp.dip.jimanglaurant.SigninServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CronServlet</servlet-name>
        <servlet-class>jp.dip.jimanglaurant.CronServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TaskInitServlet</servlet-name>
        <servlet-class>jp.dip.jimanglaurant.TaskInitServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TaskServlet</servlet-name>
        <servlet-class>jp.dip.jimanglaurant.TaskServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SigninServlet</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CallbackServlet</servlet-name>
        <servlet-class>jp.dip.jimanglaurant.CallbackServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CallbackServlet</servlet-name>
        <url-pattern>/callback</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CronServlet</servlet-name>
        <url-pattern>/cron</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TaskInitServlet</servlet-name>
        <url-pattern>/task_init</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TaskServlet</servlet-name>
        <url-pattern>/task</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
